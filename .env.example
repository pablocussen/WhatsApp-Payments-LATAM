# ─── WhatPay Environment Variables ──────────────────────
# Copy this file to .env and fill in the values

NODE_ENV=development
PORT=3000

# ─── Database ────────────────────────────────────────────
DATABASE_URL=postgresql://whatpay:password@localhost:5432/whatpay_dev
REDIS_URL=redis://localhost:6379

# ─── WhatsApp Business API ──────────────────────────────
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_API_TOKEN=your_api_token
WHATSAPP_VERIFY_TOKEN=your_webhook_verify_token

# ─── Transbank ───────────────────────────────────────────
TRANSBANK_COMMERCE_CODE=597055555532
TRANSBANK_API_KEY=your_api_key
TRANSBANK_ENVIRONMENT=integration

# ─── Khipu ───────────────────────────────────────────────
KHIPU_RECEIVER_ID=your_receiver_id
KHIPU_SECRET=your_khipu_secret

# ─── Security ────────────────────────────────────────────
JWT_SECRET=change-this-to-a-secure-random-string-of-at-least-32-chars
JWT_EXPIRATION=30m
ENCRYPTION_KEY_ID=projects/your-project/locations/global/keyRings/whatpay/cryptoKeys/main

# ─── Google Cloud ────────────────────────────────────────
GCP_PROJECT_ID=whatpay-dev
GCP_REGION=southamerica-west1
PUBSUB_PAYMENT_TOPIC=payment-events

# ─── Cloud AI (Fraud Detection) ─────────────────────────
FRAUD_MODEL_ENDPOINT=https://southamerica-west1-aiplatform.googleapis.com/v1/projects/whatpay-dev/locations/southamerica-west1/endpoints/fraud-model

# ─── App URLs ────────────────────────────────────────────
APP_BASE_URL=http://localhost:3000
PAYMENT_LINK_BASE_URL=http://localhost:3000/c
